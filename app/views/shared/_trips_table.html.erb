<!-- Make this into a table! -->

<h3>Trips: </h3>
<ul>
  <% person.trips.each do |trip| %>
  <li>
    <p>ID:<%= link_to(trip.id, trip_path(trip.id)) %></p>
    <p>Date: <%= trip.date.strftime('%m-%d-%Y') %></p>
    <p>Cost: $<%= "#{'%.02f' % cost_with_decimal(trip)}" %></p>
    <p>Driver: <%= trip.driver_id %></p>
    <p>Rating: <%= trip.rating %></p>
  </li>
  <% end %>
</ul>
