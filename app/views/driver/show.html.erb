<h1>Driver ID: <%= @driver.id %></h1>
<h2>Driver Name: <%= @driver.name %></h2>
<h2>VIN <%= @driver.vin%></h2>
<h5>Average rating <%= @rating%></h5>
<h5>Total Earnings <%= @total%></h5>

<h5><%= link_to "Edit", edit_driver_path(@driver.id)%></h5>
<h5><%= link_to "Delete", driver_path(@driver.id), method: :delete %></h5>

<section>
  <table>

    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Rating</th>
      <th>Cost</th>
      <th>Passenger</th>
    </tr>
  <% @trips.each do |trip| %>
  <tr>
  <td>
    <%= link_to trip.id, trip_path(trip.id), method: :get %>
  </td>
  <td>
    <%= trip.date %>
  </td>
  <td>
    <%= trip.rating %>
  </td>
  <td>
    <%= trip.cost %>
  </td>
  <td>
    <%= trip.passenger.name %>
  </td>
  </tr>
  <% end %>

  </table>

</section>
