<h1> Rider Detail Page </h1>

<section>
  <% if @rider %>
    <h3>NAME: <%= @rider.name %></h3>
    <p>ID: <%= @rider.id%></p>
    <p>PHONE: <%= @rider.phone %></p>
    <% else %>
    <h2> Rider ID does not found </h2>
  <% end %>
</section>

<section>
  <h3>Rider's Total Spent</h3>
  <%= "$#{@rider.total_cost}" %>
</section>

<section>
  <h3>Rider's Trips</h3>
  <%= render partial: '/partial_views/trips_list'%>
</section>

<section class = "rider-page-links">
  <%= link_to "Edit Rider", edit_rider_path(@rider.id)%>
  <%= link_to "Delete Rider", delete_rider_path(@rider.id), method: :delete, data: {confirm: "Are you sure?"}%>

  <%= link_to "New Rando Trip", create_trip_path,  data: {confirm: "For real?", method: :post, remote: true, params: {id: @rider.id}.to_param}%>
</section>
