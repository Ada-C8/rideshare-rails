<h1>Drivers</h1>
<!-- <p>Find me in app/views/drivers/index.html.erb</p> -->

<div class="notice">
  <%= flash[:notice] %>
</div>

<ul class="driver_passenger_list">
  <% @drivers.each do |driver| %>
  <li>
    <div><%= link_to(image_tag("driver.png"), driver_path(driver.id)) %></div>
    <div><%=link_to(driver.name, driver_path(driver.id)) %></div>
  </li>
  <% end %>
</ul>
