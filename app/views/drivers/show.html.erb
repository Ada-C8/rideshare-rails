<%= render partial: 'layouts/nav' %>


<section>
<h2> Driver: <%= @driver.name %> </h2>
<p> VIN: <%= @driver.vin %> </p>
<p> Number of trips: <%= @driver.trips.count %>
<%= link_to "Edit", edit_driver_path(@driver.id) %>

<%= link_to "Delete", delete_driver_path(@driver.id), method: :patch, data: { confirm: "Are you sure you'd like to delete this driver?" } %>
</section>

<h2> Trips: <% @driver.trips.each do |trip| %> </h2>
  <ul>
    <li>
      <p> Trip #<%= link_to trip.id, trip_path(trip.id) %> </p>
      <p> Date: <%= trip.date %> </p>
    </li>
  </ul>
<% end %>
