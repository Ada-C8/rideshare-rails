<div class="show-header">
  <section class="individual-image">
<img src="http://placekitten.com/150/150" alt: "Driver images" />
</section>

<section class="individual-details">
<!-- <h1>Driver Details</h1> -->
<ul>
  <li>Driver Name: <%= @driver.name %></li>
  <li>Yacht ID Number: <%= @driver.vin %></li>
  <li>Total Lifetime Earnings: $<%='%.02f' % (@driver.total_earnings / 100) %></li>
  <li>Average Rating: <%= '%.02f' % @driver.average_rating %></li>
</ul>
</section>

<section class="buttons">
    <li><%= link_to "Edit Driver Details", edit_driver_path(@driver.id), alt: "link to edit driver details" %></li>
    <li><%= link_to "Delete Driver", driver_path(@driver.id), method: :delete, alt: "link to delete driver", data: {confirm: "Are you sure you want to delete this driver?"} %></li>
    <li><%= link_to(@driver.status ? "Go Off Duty" : "Go Online", status_path(@driver.id), method: :patch, alt: "link to change driver availability status") %></li>
</section>
</div>



<table>
  <tr>
    <th>Date</th>
    <th>Trip ID</th>
    <th>Driver ID</th>
    <th>Passenger ID</th>
    <th>Rating</th>
    <th>Cost</th>
  </tr>
  <% (@driver.trips).each do |trip| %>
  <tr>
  <td><%=trip.date%></td>
  <td><%= link_to trip.id, trip_path(trip.id), alt: "link to trip details"%></td>
  <td><%=trip.driver_id%></td>
  <td><%=trip.passenger_id%></td>
  <td><%=trip.rating%></td>
  <td>$<%='%.02f' % (trip.cost / 100)%></td>
</tr>

  <% end %>
</table>
