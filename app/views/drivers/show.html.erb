<h1> Driver Detail Page </h1>
<p id="notice"><%= notice %></p>
<section>
  <% if @driver %>
    <h3><%= "NAME: #{@driver.name}" %></h3>
    <p><%= "ID: #{@driver.id}" %></p>
    <p><%= "VIN: #{@driver.vin}" %></p>
    <% else %>
    <h2> Driver ID not found </h2>
  <% end %>
</section>

<section class = "money-section">
  <h3>Driver's Total Earnings</h3>
  $<%= @driver.total_earnings %>
</section>

<section>
  <h3>Driver's Average Rating</h3>
  <%= @driver.avg_rating %>
</section>

<section class = "trips-section">
  <h3>Driver's Trips</h3>
  <%= render partial: '/partial_views/trips_list'%>
</section>

<section class = "page-content-links">
  <%= link_to "Edit Driver", edit_driver_path(@driver.id)%>
  <%= link_to "Delete Driver", delete_driver_path(@driver.id), method: :delete, data: {confirm: "Are you sure?"}%>
</section>
