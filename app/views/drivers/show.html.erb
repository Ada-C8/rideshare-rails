<%= render partial: 'layouts/nav' %>


<section>
<h2> Driver: <%= @driver.name%> </h2>
<p> VIN: <%= @driver.vin%> </p>
  <%= link_to 'Edit Driver', edit_driver_path(@driver.id) %>
</section>

  <!-- <li> Number of Trips Completed: Add this later </li> -->
<h2> Trips: <% @driver.trips.each do |trip| %> </h2>
  <ul>
    <li>
      <p> Trip #<%= link_to trip.id, trip_path(trip.id) %> </p>
      <p> Date: <%= trip.date %> </p>
    </li>
  </ul>
<% end %>
