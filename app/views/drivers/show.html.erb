
<h2><%= @driver.name%></h2>

<section class="edit_delete">
  <ul>
    <li>
      <%=link_to "Edit Driver", edit_driver_path(@driver.id)%>
    </li>
    <li>
      <%=link_to "Delete Driver", driver_path(@driver.id), method: :delete, data: { confirm: 'You are about to delete a driver. Continue?' } %>
    </li>
  </ul>
</section>


<section class="drivers_trips" >
  <% @driver.trips.each do |trip| %>

  <article class="trip_details">
    <ul>
      <li>
         <%= link_to "Trip #{trip.id}", trip_path(trip.id) %> taken <%=trip.date %>

      </li>
      <li>
        Passenger: <%=link_to trip.passenger.name, passenger_path(trip.passenger.id) %>
      </li>

      <li>
       $<%=trip.cost_convert %>
      </li>
      <li>
       Rated: <%= trip.rating%> / 5
      </li>
    </ul>
  </article>

    <%end%>

</section>


<section class="driver_stats">
  <section class="driver_earnings">
    <h3>Total Earnings</h3>
    $<%= @driver.earnings%>
  </section>

  <section class="driver_rating">
    <h3>Average Rating</h3>
    <%= @driver.average_rating %> out of 5
  </section>
</section>
