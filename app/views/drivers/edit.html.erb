<h2> Edit Driver </h2>

<%= render partial: 'layouts/error_messages', locals: { model: @driver } %>

<%= form_for  @driver do |f| %>

  <%= f.label :name, :class => 'label' %>
  <%= f.text_field :name, :class => 'field' %>
  <%= f.label :vin, :class => 'label' %>
  <%= f.text_field :vin, :class => 'field' %>
  <%= f.submit %>
<% end %>
