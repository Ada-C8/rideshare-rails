<h1> Add a driver: </h1>
<% if @driver.errors.messages.length > 0 %>
<section class="error-messages" >
  <h3>Error!</h3>
  <ul>
    <% @driver.errors.messages.each do |field, problems| %>
    <% problems.each do |problem| %>
    <li>
      <%= field %> : <%= problem %>
    </li>
    <% end %>
    <% end %>
  </ul>
</section>
<% end  %>


<%= form_for @driver do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
<br>
  <%= f.label :vin %>
  <%= f.text_field :vin %>
<br>
  <%= f.submit %>
<% end %>
