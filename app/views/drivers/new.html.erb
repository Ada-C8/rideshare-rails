
<% if @driver.errors.any? %>
<ul class="errors">
  <% @driver.errors.each do |column, message| %>
  <li>
    <strong><%= column.capitalize %></strong> <%= message %>
  </li>
  <% end %>
</ul>
<% end %>

<section class="form">
  <h2>Create a New Driver!</h2>
  <%= form_for @driver do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :vin %>
  <%= f.text_field :vin %>

  <%= f.submit %>
  <% end %>
</section>
