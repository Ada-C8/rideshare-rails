<section>
  <% if @driver.errors.any? %>
  <ul class = "errors">
    <% @driver.errors.each do |column, message| %>
      <li>
        <strong> <%= column.capitalize %> </strong> <%= message %>
      </li>
      <% end %>
    </ul>
  <% end %>
</section>

<section class = "form">
  <%= form_for @driver do |f| %>
  <article>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </article>
  <article>
    <%= f.label :vin %>
    <%= f.text_field :vin %>
  </article>
  <article>
    <%= f.submit %>
  </article>
  <% end %>
</section>
