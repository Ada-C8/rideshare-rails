

<%= render partial: 'layouts/error_messages', locals: {model: @driver} %>

<div class = "form">
  <ul>
  <%= form_for @driver do |form| %>
  <li>
    <%= form.label "Name" %>
    <%= form.text_field :name %>
  </li>
  <li>
    <%= form.label :vin %>
    <%= form.text_field :vin %>
  </li>
