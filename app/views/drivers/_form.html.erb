<% if @driver.errors.any? %>
  <ul class="errors">
    <% @driver.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<section>
  <%= form_for @driver do |f| %>
  <h4><%= f.label :name %></h4>
  <%= f.text_field :name %>
  <h4><%= f.label :vin, 'Vehicle Identification Number' %></h4>
  <%= f.text_field :vin %>
  <%= f.submit action_name %>
  <% end %>
</section>
