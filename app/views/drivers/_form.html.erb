<% @driver.errors.messages.each do |attr, message| %>
  <p class='error'><%= message[0] %></p>
<% end %>

<%= form_for @driver do |f| %>

<%= f.label :name %>
<%= f.text_field :name, required: true %>

<%= f.label :vin, 'VIN' %>
<%= f.text_field :vin, required: true %>

<%= f.submit action_name %>
<% end %>
