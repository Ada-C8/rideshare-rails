<h1>Passengers#show</h1>
<hr />
<% if !(@trip) %>
<p>
  This trip doesn't meowxist.
</p>
<% else %>
Trip ID: <%= link_to(@trip.id, trip_path(@trip.id))  %>
<ul>
  <li>Date: <%=@trip.date%>
  </li>
  <li>
    Driver: <%= link_to(@trip.driver.name, driver_path(@trip.driver.id)) %>
  </li>
  <li>
    Passenger: <%= link_to(@trip.passenger.name, passenger_path(@trip.passenger.id)) %>
  </li>
  <li>
    Rating: <%= @trip.rating %>
  </li>
  <li>
    Cost: <%= money_format(@trip.cost) %>
  </li>
  <li>
    <strong><%= link_to "edit", edit_trip_path(@trip.id) %></strong>
    <strong><%=link_to "delete", trip_path(@trip.id), method: :delete, data: { confirm: "ru sure" } %></strong>
  </li>
</ul>
<% end %>

