<article class="page">
  <h2 class="page-title">Trip Details</h2>

  <section class="trip-info">
    <h3 class="table-heading">Trip Information</h3>
    <div>
      <figure class="trip-portrait">
        <img src="http://www.map2pic.com/css/1.png" alt="">
      </figure>
      <table class="trip-deets">
        <tr>
          <td class="icon"><i class="fa fa-hashtag"></i></td>
          <td class="title">ID number</td>
          <td class="data"><%= @trip[:id] %></td>
        </tr>
        <tr>
          <td class="icon"><i class="fa fa-car"></i></td>
          <td class="title">Driver ID</td>
          <td class="data"><%= @trip[:driver_id] %></td>
        </tr>
        <tr>
          <td class="icon"><i class="fa fa-user"></i></td>
          <td class="title">Passenger ID</td>
          <td class="data"><%= @trip[:passenger_id] %></td>
        </tr>
        <tr>
          <td class="icon"><i class="fa fa-calendar"></i></td>
          <td class="title">Date</td>
          <td class="data"><%= @trip[:date] %></td>
        </tr>
        <tr>
          <td class="icon"><i class="fa fa-star"></i></td>
          <td class="title">Rating</td>
          <td class="data">
            <%= render partial: 'layouts/star', locals: { model: @trip[:rating] } %>
          </td>
        </tr>
        <tr>
          <td class="icon"><i class="fa fa-usd"></i></td>
          <td class="title">Cost</td>
          <td class="data">$<%= @trip.to_dollars%></td>
        </tr>
      </table>
    </div>
  </section>

  <section class="trip-actions">
    <%= link_to edit_trip_path(@trip) do %>
      <i class="fa fa-edit"></i> EDIT
    <% end %>
    <%= link_to trip_path(@trip), method: :delete, data: { confirm: 'Are you sure you want to delete this trip?'} do %>
      <i class="fa fa-trash-o"></i> DELETE
    <% end %>
    <%= link_to driver_path(@trip[:driver_id]) do %>
      <i class="fa fa-car"></i> DRIVER DETAILS
    <% end %>
    <%= link_to passenger_path(@trip[:passenger_id]) do %>
      <i class="fa fa-user"></i> PASSENGER DETAILS
    <% end %>
  </section>

</article>
