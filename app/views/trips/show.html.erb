<h1>Trip Details</h1>

<% if @trip.rating.nil? %>
  <p>Add a rating to this trip!</p>
  <%= form_for @trip do |f| %>
  <%= f.label :rating %>
  <%= f.range_field :rating, in: 1..5, :step => 1 %>
  <%= f.submit %>
  <% end %>
<% end %>

<p>ID: <%= @trip.id %></p>
<p>Date: <%= @trip.date %></p>
<p>Cost: $<%= @trip.cost/100.0 %></p>
<p>Rating: <%= @trip.rating %></p>
<p>Driver: <%= link_to @trip.driver_id, driver_path(@trip.driver_id) %></p>
<p> Passenger: <%= link_to @trip.passenger_id, passenger_path(@trip.passenger_id) %></p>

<%= link_to "Edit", edit_trip_path(@trip.id) %>
<%= link_to "Delete", trip_path(@trip.id), method: :delete, data: { confirm: "Delete trip?" } %>
