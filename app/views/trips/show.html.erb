<h1>Trip Details</h1>
<div class="show-header">
  <section class="individual-image">
<img src="http://placekitten.com/150/150" alt: "Driver images" />
</section>

<section class="individual-details">
<!-- <h1>Driver Details</h1> -->
<ul>
  <li>Date: <%= @trip.date %></li>
  <li>Trip ID: <%= @trip.id %></li>
  <li>Driver Name: <%= @trip.driver.name %></li>
  <li>Passenger Name: <%= @trip.passenger.name %></li>
  <li>Rating: <%= @trip.rating %></li>
  <li>Cost: $<%='%.02f' % (@trip.cost / 100) %></li>
</ul>
</section>

<section class="buttons">
    <li><%= link_to "Edit Rating", edit_trip_path(@trip.id), alt: "Link to edit trip rating" %></li>
    <li><%= link_to "Delete Trip", trip_path(@trip.id), method: :delete, alt: "link to delete trip", data: {confirm: "Are you sure you want to delete this trip?"} %></li>
</section>
</div>
