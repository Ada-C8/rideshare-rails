<h2>New Trip</h2>

<%= render partial: 'layouts/error_messages', locals: { model: @trip } %>

<%= form_for @trip do |f| %>
  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.label :rating %>
  <%= f.text_field :rating, :value => 5  %>

  <%= f.label :driver_id %>
  <%= f.collection_select(:driver_id, Driver.all.order('name asc'), :id, :name)%>
  <!-- this is a dropdown menu with all Drivers listed -->
  <% if @trip.passenger_id %>
    <%= f.hidden_field :passenger_id %>
  <% else %>
    <%= f.label :passenger_id %>
    <%= f.collection_select(:passenger_id, Passenger.all.order('name asc'), :id, :name)%>
  <% end %>


  <%= f.label :cost %>
  <%= f.text_field :cost %>

  <%= f.submit %>
<%end%>
