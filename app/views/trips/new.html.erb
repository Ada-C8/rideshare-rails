<% if @trip.errors.any? %>
  <% @trip.errors.each do |column, message| %>
    <strong><%= column.capitalize %></strong> <%= message %>
  <% end %>
<% end %>

<%= form_for @trip do |f| %>
  <%= f.hidden_field :driver_id %>

  <%= f.hidden_field :passenger_id %>

  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.label :cost %>
  <%= f.text_field :cost %>

  <%= f.submit "Add New Trip" %>
<% end %>
