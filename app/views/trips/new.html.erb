<% if @passenger.errors.any? %>
  <% @passenger.errors.each do |column, message| %>
    <strong><%= column.capitalize %></strong> <%= message %>
  <% end %>
<% end %>

<%= form_for @trips do |f| %>
  <%= f.label :driver_id %>
  <%= f.text_field :driver_id %>

  <%= f.label :passenger_id %>
  <%= f.text_field :passenger_id %>

  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.label :rating %>
  <%= f.text_field :rating %>

  <%= f.label :cost %>
  <%= f.text_field :cost %>

  <%= f.submit "Add New Trip" %>
<% end %>
