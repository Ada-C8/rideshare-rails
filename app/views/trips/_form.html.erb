<div class="form">
  <%= form_for @trip do |f| %>
  <div class="form-item">
    <%= f.label :driver_id %>
    <%= f.collection_select(:driver_id, Driver.all.order(:name), :id, :name) %>
  </div>

  <div class="form-item">
    <%= f.label :passenger_id %>
    <%= f.collection_select(:passenger_id, Passenger.all.order(:name), :id, :name) %>
  </div>

  <div class="form-item">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

    <% if rating_visible %>
      <div class="form-item">
        <%= f.label :rating %>
        <%= f.text_field :rating %>
      </div>
    <% else %>
      <%= f.hidden_field :rating, :value => 0 %>
    <% end %>

  <div class="form-item">
    <%= f.label :cost %>
    <%= f.text_field :cost %>
  </div>

  <div class="form-item">
    <%= f.submit action_name %>
  </div>
  <% end %>
</div>
