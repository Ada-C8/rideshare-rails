<%= form_for @trip do |f| %>
  <%= f.label :driver_id %>
  <%= f.collection_select(:driver_id, Driver.all.order(:name), :id, :name, {include_blank: 'Select a driver'}) %>

  <%= f.hidden_field :passenger_id %>
  <%#<%= f.collection_select(:passenger_id, Passenger.all.order(:name), :id, :name) %>

  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.label :rating %>
  <%= f.text_field :rating %>

  <%= f.label :cost %>
  <%= f.text_field :cost %>

  <%= f.submit action_name %>
<% end %>
