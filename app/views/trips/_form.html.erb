<%= form_for @trip do |f| %>

  <%= f.hidden_field :driver_id %>

  <%= f.hidden_field :passenger_id %>

  <%= f.label :choose_a_date %>
  <%= f.date_field :date %>

  <%= f.label :rating, "Enter a rating of 1-5" %>
  <%= f.text_field :rating %>

  <%= f.label :cost %>
  <%= f.text_field :cost %>


  <%= f.submit submit_name %>
<% end %>
