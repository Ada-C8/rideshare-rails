<%= render partial: 'layouts/nav' %>
<%= render partial: 'layouts/error_messages',
      locals: { model: @trip } %>
  <p>
    <%= form_for @trip do |f| %>
  </p>
  <%= f.label :date %>
  <%= f.text_field :date, size: 10, readonly: true %>
  <p>
    <%= f.label :driver %>
    <%= f.collection_select(:id, Driver.all, :id, :name) %>
  </p>
  <p>
    <%= f.label :passenger %>
    <%= f.collection_select(:id, Passenger.all, :id, :name) %>
  </p>
  <p>

    <%= f.label :rating %>
    <%= f.select :rating, [[1],[2],[3],[4],[5]] %>

    <%= f.label :cost %>
    <%= f.text_field :cost, size: 7 %>
    <!-- Is there a way to input dollar amounts with decimals and convert to cents in db? -->
  </p>
  <%= f.submit %>
<% end %>
