<h2>Edit Trip</h2>

<%= render partial: 'layouts/error_messages', locals: { model: @trip } %>

<ul class= "form">
  <%= form_for @trip do |f| %>
    <li>
      <%= f.label :date, :class => 'label' %>

      <%= f.date_field :date, :class => 'field' %>
    </li>

    <li>
      <%= f.label :rating, :class => 'label' %>

      <%= f.text_field :rating, :value => 5, :class => 'field'  %>
    </li>

    <li>
      <%= f.label :driver_id, :class => 'label' %>
      <%= f.collection_select(:driver_id, Driver.all, :id, :name)%>
      <!-- this is a dropdown menu with all Drivers listed -->
    </li>
    <li>
      <%= f.label :passenger_id, :class => 'label' %>
      <%= f.collection_select(:passenger_id, Passenger.all, :id, :name)%>
    </li>

    <li>
      <%= f.label :cost, :class => 'label' %>

      <%= f.text_field :cost, :class => 'field' %>
    </li>

    <li>
      <%= f.submit %>
    </li>
  <%end%>
