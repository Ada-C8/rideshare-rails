<h3>edit trip:</h3>
<%= render partial: 'layouts/error_messages', locals: {model: @trip} %>
<%= form_for @trip do |f| %>

  <%= f.label :date %>
  <%= f. text_field :date %>

  <%= f.label :passenger_id %>
  <%= f. text_field :passenger_id %>

  <%= f.label :driver_id %>
  <%= f. text_field :driver_id %>

  <%= f.label :cost %>
  <%= f. text_field :cost %>

  <%= f.label :rating %>
  <%= f. text_field :rating %>

  <%= f.submit %>
<% end %>
