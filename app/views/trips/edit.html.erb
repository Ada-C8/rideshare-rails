<h1>Trips#edit</h1>

<section>
  <% if @trip.errors.any? %>
    <ul class="errors">
      <% @trip.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>
</section>

<%= form_for @trip do |f| %>
  <%= f.label "Passenger" %>
  <%= f.select :passenger_id, options_from_collection_for_select(Passenger.all, "id", "name", :selected => @trip.passenger.id) %>

  <%= f.label :date %>
  <%= f.date_field :date, :selected => @trip.date %>

  <%= f.label "Trip Rating:" %>
  <%= f.select :rating, options_for_select([1,2,3,4,5], :selected => @trip.rating) %>

  <%= f.label "Driver:" %>
  <%= f.select :driver_id, options_from_collection_for_select(Driver.all, "id", "name", :selected => @trip.driver.id) %>

  <%= f.submit "Save Data"%>
<% end %>

