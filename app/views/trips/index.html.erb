<h2>ALL TRIPS</h2>

<section class="trip_details">
<ol>
  <% @trips.order(:date).each do |trip|%>
  <li>
    <h4><%= link_to "Trip on: #{trip.date}", trip_path(trip) %></h4>
    <ul>
      <li>
        <%= "Driver: #{trip.driver_name}"%>
      </li>
      <li>
        <%= "Passenger: #{trip.passenger_name}"%>
      </li>
    </ul>
  </li>
  <% end %>
</ol>
</section
