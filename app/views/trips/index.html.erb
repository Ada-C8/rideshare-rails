<%= render partial: 'layouts/style' %>
<div class="wrapper">
  <a name="top" id="top-of-page"></a>

  <nav class="flex-box-from-top">
    <%= render partial: 'layouts/nav'%>
  </nav>

  <section class="cool-list">
    <h2 class="margin-left">
      All Trips
    </h2>
    <ul>
      <% @trips.each do |trip| %>
        <section class="hover-style">
          <%= link_to trip_path(trip.id), class: "link_to-style" do %>
            <li class="flex-box">
              <p class="margin-left">
                <strong>ID: <%= trip.id %></strong><br>
                Date: <%= trip.date %><br>
                Driver: <%= trip.driver.name %>
              </p>
              <span class="heebo-font" align-content="center">
                MORE DETAILS
              </span>
            </li>
          <% end %>
        </section>
      <% end %>
    </ul>
    <a href="#" id="top">Back to top</a>
  </section>
</div>
