
<% if model.errors.messages.length > 0 %>
<section class= "error-messages">
  <h3>Errors Happened!</h3>
  <ul>
    <% model.errors.messages.each do |field, problems| %>
      <% problems.each do |problem| %>
      <li> <%= field %>
      <%= problem %>
    </li>
    <% end %>
  <%end%>
  </ul>
</section>
<%=end%>
