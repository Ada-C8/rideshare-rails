<!DOCTYPE html>
<html>
  <head>
    <title>RideshareRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h2><%= link_to "Tandemshare", root_path %></h2>
    </header>


    <nav>
        <label for="show-menu" class="show-menu">Menu</label>
        <input type="checkbox" id="show-menu" role="button">
            <ul id="menu">
            <li>
                <%= link_to "Drivers", drivers_path %>
                <ul class="hidden">
                    <li><%= link_to "Add Driver", new_driver_path %></li>
                </ul>
            </li>
            <li>
                <%= link_to "Passengers", passengers_path %>
                <ul class="hidden">
                    <li><%= link_to "Add Passenger", new_passenger_path %></li>
                </ul>
            </li>
        </ul>
    </nav>

    <main>
    <%= yield %>
    </main>

    <footer>
      â’¸ 2017 Victoria & Laura
    </footer>
  </body>
</html>
