<h2>
  Passenger <%= @passenger.name%>
</h2>

<section>
  <div class="individual_info">
    <ul>
      <li>
        Passenger name: <%= @passenger.name%>
      </li>
      <li>
        Passenger's Phone number: <%= @passenger.phone_num%>
      </li>
      <li>
        Passenger's total spent: $ <%= "%.2f" % @passenger.total_spent %>
      </li>
      <li>
        Trips:
        <% if Trip.all.where(passenger_id: @passenger.id).length == 0 %>
          No trips taken yet!
        <%else%>
        <%= render partial: 'table'%>
          <%end%>
      </li>
    </ul>
  </div>

  <fig>
    <img src=" http://fillmurray.com/200/200">
    <figcaption>
      Photograph of <%=@passenger.name%>
    </figcaption>
  </fig>

  <div class="buttons">
    <ul>
      <li>
        <%= link_to "Edit passenger information", edit_passenger_path(@passenger.id), class: "link"%>
      </li>
      <li>
      <%= link_to "Create a new trip", new_passenger_trip_path(@passenger.id), class: "link" %>
      </li>
      <li>
      <%= link_to "Delete", passenger_path(@passenger.id), method: :delete, data: {confirm: "Are you sure you want to delete #{@passenger.name} from the database? You can not undo this action."}, class: "link"%>
      </li>
    </ul>
  </div>
</section>
