<h1>passengers#show</h1>

<h2>Params:<%= params %></h2>
<h2><%= link_to("Delete Passenger", passenger_path, method: :delete) %></h2>
<h2><%= link_to("Edit Passenger", edit_passenger_path) %></h2>
<h3>Name: <%= @passenger.name %></h3>
<h3>Phone: <%= @passenger.phone_num %></h3>
<h3>Total Trips Cost: $<%= @passenger.total_trip_cost %>
<h3>Trips: <% Trip.where(passenger_id: @passenger.id).find_each do |trip| %></h3>
<h4>Trip ID:<%= link_to(trip.id, trip_path(trip.id)) %></h4>
<% end %>

<%= button_to("Add a Trip", new_trip_path, method: :get) %>
