<h1>This is the passengers summary page</h1>


<div>
  <%= render partial: "passenger_summary"%>

  <%trips = Trip.all.where(passenger_id: @passenger.id)%>
  <ol>
  <% trips.each do |trip| %>
  <li>
    Trip ID: <%=link_to trip.id, trip_path(trip.id) %>
  </li>

  <%end%>
  </ol>

<%= link_to "Edit passenger information", edit_passenger_path(@passenger.id), class: "link"%>
<%= link_to "Delete", passenger_path(@passenger.id), method: :delete, data: {confirm: "Are you sure you want to delete this passenger from the database? You can not undo this action."}%>
</div>
