<h2>SHOW PASSENGER</h2>

<ul>
  <li>Name: <%= @passenger[:name] %></li>
  <li>Phone number: <%= @passenger[:phone_num] %></li>
  <li>ID: <%= @passenger[:id] %></li>
  <li>Total Spent: <%= @passenger.total_spent %></li>
  <li><%= link_to 'DELETE', passenger_path(@passenger), method: :delete, data: { confirm: 'Are you sure you want to delete this passenger?'} %></li>
  <li><%= link_to 'EDIT', edit_passenger_path(@passenger) %></li>
  <li><%= link_to 'ADD TRIP', new_passenger_trip_path(@passenger[:id]) %></li>
  <li>
    Trips:
    <table>
      <% @passenger.trips.each do |trip|%>
        <tr>
          <td><%= trip.driver_id%></td>
          <td><%= trip.date%></td>
          <td><%= trip.rating%></td>
          <td><%= trip.cost%></td>
          <td><%= link_to 'TRIP DEETS', trip_path(trip[:id])%></td>
        </tr>
      <% end %>
    </table>
  </li>
</ul>
