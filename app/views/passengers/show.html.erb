

<h1><%= @passenger.name %></h1>

<p>
  Phone Number: <%= @passenger.phone_num %>
</p>


<p>
  Trips Taken:
</p>

<% i = 1 %>
<% total = 0 %>
<% @passenger.trips.each do |trip| %>
<p>

  <% total += trip.cost %>
  <%= link_to "Trip #{i}:", trip_path(trip.id) %>
  Date: <%= trip.date %>,
  Rating: <%= trip.rating %>,
  Cost: $<%= sprintf('%.2f', trip.cost / 100.0 )%>
    <% i += 1 %>
</p>

<% end %>

<p>
  Total Amount Charged: $<%= sprintf('%.2f', total / 100.0 )%>
</p>

<li>
  Add a new trip for this passenger
An available driver is selected by the server
The trip starts with no rating
</li>
<li>
<%= link_to 'Add trip', new_passenger_trip_path(:passenger_id => @passenger.id) %>
</li>
<li>
  <%= link_to "Edit", edit_passenger_path(@passenger.id) %>
</li>
<li>
  <%= link_to "Delete", passenger_path(@passenger.id), method: :delete, data: {:confirm => "Are you sure you want to delete this driver?"} %>
</li>

