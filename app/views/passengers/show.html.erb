<h1>Passenger Details</h1>

<p><%= @passenger.name %></p>
<p><%= @passenger.phone_num %></p>

<%= link_to "Edit Passenger", edit_passenger_path %>
<%= link_to "Delete Passenger", passengers_path, data: { confirm: "Are you sure you want to delete?" } %>


<h3> Trip details</h3>

<ul>
  <%@trips.each do |trip|%>
  <li> Date:<%= trip.date %> </li>
  <li> Passenger: <%= trip.passenger_id %></li>
  <li> Cost: <%= trip.cost %></li>
  <li> Rating: <%= trip.rating %></li>
  <% end %>
</ul>
