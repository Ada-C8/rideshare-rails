<h1>Passenger Details</h1>

<p>
  Passenger Name: <%= @passenger.name %>
  Phone Number: <%= @passenger.phone_number %>
    Passenger Lifetime Cost on Yachts: $<%= '%.02f' % (@passenger.total_cost / 100) %>
    <%= link_to "Edit Passenger Details", edit_passenger_path(@passenger.id), alt: "link to edit passenger details" %>
</p>

<table>
  <tr>
    <th>Date</th>
    <th>Trip ID</th>
    <th>Driver ID</th>
    <th>Passenger ID</th>
    <th>Rating</th>
    <th>Cost</th>
</tr>
  All trips taken by <%= @passenger.name %>:
  <% (@passenger.trips).each do |trip| %>
  <tr>
  <td><%=trip.date%></td>
  <td><%=link_to trip.id, trip_path(trip.id), alt: "link to trip details"%></td>
  <td><%=trip.driver_id%></td>
  <td><%=trip.passenger_id%></td>
  <td><%=trip.rating%></td>
  <td>$<%='%.02f' % (trip.cost / 100)%></td>
</tr>

<% end %>
</table>
