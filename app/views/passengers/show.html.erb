<%= render partial: 'layouts/nav' %>


<h2>Passenger: <%= @passenger.name%> </h2>
<h3>Phone Number: <%= @passenger.phone_num%> </h3>
<p>Total charged: <%= @passenger.total_charged %></p>
  <ul>
    <!-- <li> Number of Trips Completed: Add this later </li> -->
    <li> Trips: <% @passenger.trips.each do |trip| %>
        <ul>
          <li>
            <h4> Trip #<%= link_to trip.id, trip_path(trip.id) %> </h4>
            <h4> Date: <%= trip.date %> </h4>
          </li>
          <li> Rating: <%= trip.rating %> </li>
          <li> Cost: <%= trip.cost %> </li>
          <li> Passenger: <%= trip.passenger.name %> </li>
        </ul>
      <% end %>
    </li>
  </ul>
</h2>
