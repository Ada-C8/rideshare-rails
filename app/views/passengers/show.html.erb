<h1>Passenger Details</h1>
<%= params.inspect %>

<p>
  Passenger Name: <%= @passenger.name %>
</p>

<p>
  Phone Number: <%= @passenger.phone_number %>
</p>

<table>
  <tr>
    <th>Date</th>
    <th>Trip ID</th>
    <th>Driver ID</th>
    <th>Passenger ID</th>
    <th>Rating</th>
    <th>Cost</th>
</tr>
  All trips taken by <%= @passenger.name %>:
  <% trips = Trip.where(passenger: @passenger.id) %>
  <% trips.each do |trip| %>
  <tr>
  <td><%=trip.date%></td>
  <td><%=trip.id%></td>
  <td><%=trip.driver_id%></td>
  <td><%=trip.passenger_id%></td>
  <td><%=trip.rating%></td>
  <td>$<%='%.02f' % (trip.cost / 100)%></td>
</tr>

<% end %>
</table>
