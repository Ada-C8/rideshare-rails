<h1>Passenger ID: <%= @passenger.id %></h1>
<h3>Passenger Name: <%= @passenger.name %></h3>
<h3>Phone: <%= @passenger.phone_num %></h3>
<p><%= link_to "Edit", edit_passenger_path(@passenger.id)%> | <%= link_to "Delete", passenger_path(@passenger.id), method: :delete %></p>

<section>
  <table>

    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Rating</th>
      <th>Cost</th>
      <th>Driver</th>
    </tr>
  <% @trips.each do |trip| %>
  <tr>
  <td>
    <%= link_to trip.id, trip_path(trip.id), method: :get %>
  </td>
  <td>
    <%= trip.date %>
  </td>
  <td>
    <%= trip.rating %>
  </td>
  <td>
    <%= trip.cost %>
  </td>
  <td>
    <%= link_to trip.driver.name, driver_path(id: trip.driver.id)%>
  </td>
  </tr>
  <% end %>

  </table>

</section>
