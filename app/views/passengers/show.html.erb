<h1>Passengers#show</h1>

<%= link_to("Edit Passenger", edit_passenger_path(@passenger.id)) %>
<%= link_to("Delete Passenger", delete_passenger_path(@passenger.id), method: :delete, data: {confirm: "Noooooooo! I'm pregnant! It's your baby!"}) %>

<h3>Passenger Total Charged:</h3>
<p><%= (@passenger.total_charged / 100).round(2) %></p>

<section>
    <h1><%= @passenger.name  %></h1>
    <p>
    <%= @passenger.phone_num %>
    </p>
</section>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Cost</th>
      <th>Driver Name</th>
      <th>Rating</th>
    </tr>
  </thead>


  <tbody>
    <% @passenger.trips.each do |t|  %>
    <tr>
      <td>
        <%= link_to(t.id, trip_path(t.id)) %>
      </td>
      <td>
        <%= t.date %>
      </td>
      <td>
        <%= format("%.2f", t.cost / 100) %>
      </td>
      <td>
        <%= t.driver.name %>
      </td>
      <td>
        <%= t.rating %>
      </td>
    </tr>
    <% end  %>
  </tbody>
</table>

<%= link_to("New Trip", new_trip_path(:passenger => @passenger)) %>
