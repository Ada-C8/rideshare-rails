<h1>Name: <%= @passenger.name %> </h1>
<h3>Spent a total of: <%= @passenger.calculate_total(@passenger.id) %></h3>
<h3>All Trips:</h3>
<ul>
  <% all_trips = Trip.all.order(date: :desc) %>
  <% all_trips.each do |trip| %>
    <% if trip.passenger_id == @passenger.id %>
      <li>
          <%= link_to trip.date, trip_path %>
      </li>
    <% end %>
  <% end %>
</ul>

<p><%= link_to "Edit", edit_passenger_path(@passenger.id) %></p>
<p><%= link_to "Delete", passenger_path(@passenger), method: :delete , data: {confirm: "Are you sure?" } %></p>
