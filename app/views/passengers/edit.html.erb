<h2> Edit Passenger </h2>

<%= render partial: 'layouts/error_messages', locals: { model: @passenger } %>

<%= form_for  @passenger do |f| %>

  <%= f.label :name, :class => 'label' %>
  <%= f.text_field :name, :class => 'field' %>
  <br />
  <br />
  <%= f.label :phone_num, :class => 'label' %>
  <%= f.text_field :phone_num, :class => 'field' %>
  <br />
  <br />
  <%= f.submit %>
<% end %>
