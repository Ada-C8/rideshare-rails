<article class="bg-color">
  <header class="style">
    <h1>All Passengers by Name</h1>
    <p>
       Click on a passenger to view more details
    </p>
  </header>
  <section class="columns">
    <ol>
      <% @passengers.each do |passenger| %>
      <li>
        <%= link_to passenger.name, passenger_path(passenger), class: "visited-color link-styles" %>
      </li>
      <% end %>
    </ol>
  </section>
</article>
