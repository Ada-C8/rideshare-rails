<h1 class="indextitle">Passenger List</h1>
<section class="wrap">
<ul class="indexlist">
  <% @passengers.each do |passenger| %>
  <li>
    <p><%= link_to(passenger.name, passenger_path(passenger.id), alt: "link to",class:"passenger") %>
      - <%= passenger.phone_num %></p>
    <%= link_to("Edit", edit_passenger_path(passenger.id),class:"edit")%>
    <%= link_to("Delete", passenger_path(passenger.id), method: :delete, data: {confirm: "Delete this FOREVER?" },class:"delete")%>
  </li>
  <% end %>
</ul>
</section>
