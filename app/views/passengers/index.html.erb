<h2>Active Passengers</h2>

<%= link_to "Add new passenger", new_passenger_path(@passenger) %>

<section class="passengers">
    <% @passengers.each do |passenger| %>

    <article class="list_of_people">
      <ul>
        <li>
          <strong>
            <%= link_to(passenger.name, passenger_path(passenger.id), alt: 'link to', class:"title" ) %>
          </strong>
        </li>
      </ul>
    </article>

    <% end %>
</section>
