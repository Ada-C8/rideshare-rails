<h1>Passenger List</h1>

<ul>
  <% @passengers.each do |passenger| %>
  <li>
    <p><%= link_to(passenger.name, passenger_path(passenger.id), alt: "link to") %>
      - <%= passenger.phone_num %></p>
    <%= link_to("Edit", edit_passenger_path(passenger.id))%>
    <%= link_to("Delete", passenger_path(passenger.id), method: :delete, data: {confirm: "Delete this FOREVER?" })%>
  </li>
  <% end %>
</ul>
