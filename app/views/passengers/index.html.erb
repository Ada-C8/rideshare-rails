<h2>Active Passengers</h2>
<section class="list_of_people">
  <ol>
    <% @passengers.order(:name).each do |passenger| %>
    <li class="passenger_name">
      <ul>
        <li>
        <strong><%= link_to passenger.name, passenger_path(passenger.id)%></strong>
        </li>
      </ul>
    </li>

    <%end%>
  </ol>
</section>
