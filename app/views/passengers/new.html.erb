<h1>Add a New Passenger</h1>

<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
    <li> <strong><%= column.capitalize %> </strong> <%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @passenger do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :phone_num, "Phone number" %>
  <%= f.text_field :phone_num %>

  <%= f.submit "Create a new passenger" %>
<% end %>
