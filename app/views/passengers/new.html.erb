<h1 class="form_title">Create a Passenger</h1>

<% if @passenger.errors.any? %>
<ul class="errors">
  <% @passenger.errors.each do |column, message| %>
  <li>
    <strong><%= column.capitalize %> </strong><%= message %>
  </li>
  <% end %>
</ul>
<% end %>

<%= render partial: "shared/form", locals: {button_name: "Add Passenger"} %>
