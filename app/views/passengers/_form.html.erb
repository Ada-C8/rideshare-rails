<% if @passenger.errors.any? %>
  <section class="errors">
    <ul>
      <% @passenger.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
      <% end %>
    </ul>
  </section>
<% end %>

<section class="form">
<%= form_for @passenger do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :phone_num, 'Phone Number' %>
<%= f.text_field :phone_num %>
<%= f.submit action_name, class: "button" %>
<% end %></section>
