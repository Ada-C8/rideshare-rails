<%= render partial: 'layouts/error_messages',
      locals: { model: @passenger } %>

<%= form_for @passenger do |f| %>
  <%= f.label :passenger %>
  <%= f.text_field :name, placeholder: "Ada Lovelace" %>

  <%= f.label :phone_num %>
  <%= f.text_field :phone_num, placeholder: "(206)123-4567" %>

  <%= f.submit %>
<% end %>
